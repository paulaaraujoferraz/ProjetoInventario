<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:excludeFromRecents="true"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Ocorrência com Fotos (até 10 fotos por Conferência)"
        android:textColor="@color/CinzaEscuro"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nrentrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="Conferência:"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Vermelho"
        android:textSize="14sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:weightSum="1"
            android:orientation="vertical"
            >


        <EditText
        android:id="@+id/edtobs"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
            android:cursorVisible="true"
        android:editable="false"
        android:ems="10"
        android:fadingEdge="horizontal|vertical"
        android:gravity="fill_horizontal"
        android:hint="Digite "
        android:inputType="textCapCharacters"
        android:lineSpacingExtra="10sp"
        android:shadowColor="#ff494949"
        android:textColor="#ff1b1b1b"
        android:typeface="monospace" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.30"
            android:text="Breve Descrição"
            android:textAlignment="textStart"
            android:textColor="@color/CinzaEscuro"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:background="@color/Branco"
            android:src="@drawable/baixacomfoto"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>












</LinearLayout>
